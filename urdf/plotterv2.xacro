<?xml version="1.0" ?>

<robot name="plotter" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- BGN - Include -->
  <xacro:include filename="$(find plotter_description)/urdf/robot_parameters.xacro" />
    <xacro:include filename="$(find plotter_description)/urdf/links_joints.xacro" />
  <!-- END - Include -->


  <!-- BGN - Robot description -->
  <m_link_box name="${link_00_name}"
              origin_rpy="0 0 0" origin_xyz = "0 0 0"
              mass = "1024"
              ixx = "170.667" ixy = "0" ixz = "0"
              iyy = "170.67"  iyz = "0"
              izz = "170.67"
              size = "0.032 0.004 0.068" />


<!--

    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.032 0.004 0.068"/>
            </geometry>
        </visual>
    </link>

  -->

  <m_joint_fixed name="${link_00_name}__${link_01_name}" type="fixed"
       origin_rpy ="0 0 0" origin_xyz = "0 ${0.004/2} 0"
       parent = "${link_00_name}"  child = "${link_01_name}" />


<!--

    <joint name="base_link__link_01" type="fixed">
        <origin rpy="0 0 0" xyz="0 ${0.004/2} 0"/>
        <parent link="base_link"/>
        <child link="link1"/>
    </joint>

  -->


    <link name="link01">
        <visual>
            <origin rpy="0 0 0" xyz="0 ${0.036/2 } 0"/>
            <geometry>
                <box size="0.02 0.036 0.045"/>
            </geometry>
        </visual>
    </link>


    <joint name="link_01__link_02" type="revolute">
      <axis xyz="0 0 1" />
      <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5" />

        <origin rpy="0 0 0" xyz="0 0.036 0"/>
        <parent link="link01"/>
        <child link="link2"/>
    </joint>

    <link name="link2">
        <visual>
            <origin rpy="0 0 0" xyz="0 ${0.061/2} 0"/>
            <geometry>
                <box size="0.02 0.061 0.057"/>
            </geometry>
        </visual>
    </link>

    <joint name="link_02__link_03" type="revolute">
      <axis xyz="0 0 1" />
      <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5" />

        <origin rpy="0 0 0" xyz="0 0.061 0"/>
        <parent link="link2"/>
        <child link="link3"/>
    </joint>

    <link name="link3">
        <visual>
            <origin rpy="0 0 0" xyz="0 ${0.026/2} 0"/>
            <geometry>
                <box size="0.02 0.026 0.057"/>
            </geometry>
        </visual>
    </link>

</robot>
